<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neo.andstudy.FrameLayoutActivity">

    <Button
        android:id="@+id/frame_bt_imagechange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imagechange"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="131dp" />

    <FrameLayout
        android:layout_width="387dp"
        android:layout_height="489dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_bt_imagechange"
        app:layout_constraintHorizontal_bias="0.421">

        <ImageView
            android:id="@+id/frame_img_shutdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shutdown" />

        <ImageView
            android:id="@+id/frame_img_standby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/standby" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
